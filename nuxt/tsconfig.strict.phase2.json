{
  "extends": "./.nuxt/tsconfig.app.json",
  "files": [
    "./.nuxt/types/imports.d.ts",
    "./.nuxt/types/app.config.d.ts",
    "./.nuxt/types/runtime-config.d.ts"
  ],
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": false,
    "checkJs": false,
    "useUnknownInCatchVariables": true,
    "types": ["node"]
  },
  "include": [
    "app/features/article-list/**/*.ts",
    "app/shared/api/**/*.ts",
    "app/shared/cache/**/*.ts",
    "app/shared/errors/**/*.ts",
    "server/**/*.ts"
  ]
}
